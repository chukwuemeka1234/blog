<div class= "mx-auto" style= "width: 30vw">
  <h2>Create New Post</h2>

  <%= form_with model: @post, url: user_posts_path, scope: :post, html: {class: ""} do |form| %>
  <div class= "form-outline mb-4">
    <%= form.text_field :Title, placeholder: "Title", required: true, class: "form-control" %>
    <%= form.text_area :text, placeholder: "Type here...", rows: 10, required: true, class: "form-control" %>
    <%= form.submit "Post", class: "form-control btn btn-primary btn-block mb-4"%>
  </div>
  <% end %>

</div>